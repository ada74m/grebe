<!DOCTYPE html>
<html>
	<head>
	  <title>Shinfo</title>
	  <%= stylesheet_link_tag :all %>
	  <%= stylesheet_link_tag 'jquery-themes/hot-sneaks/jquery-ui-1.8.8.custom.css' %>
	  <%= javascript_include_tag :defaults %>
	  <%= javascript_include_tag 'jquery-ui-1.8.8.custom.min.js' %>
	  <%= csrf_meta_tag %>
	</head>
	<body>

		<div id="wrapper">

			<div id="head">
				<div id="app-title">Shipbroker information system &copy; Adam 2011</div>

				<% if @app_user %>
				<div id="session">
					<%= @app_user.name %>
					<%= link_to "Sign-out", session_path('current'), :method => :delete %>
				</div>
				<% end %>


				<div id="top-links">

					<% if @app_user %>
					<%= link_to "My account", @app_user %> |
					<% end %>

					<%= link_to "Users", users_path %>
				</div>
			</div>

			<div id="breadcrumbs">
				<%= link_to 'Home', root_path %> &gt; 
				<div class="page-title"><%= yield :title%></div>
			</div>

			<% if flash[:notice] %>
			<div id="flash"><%= flash[:notice] %></div>
			<% end %>


			<div id="body">
				<%= yield %>
			</div>

		</div>



	</body>
</html>